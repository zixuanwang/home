 {% extends '::base.html.twig' %} {% block body %}
<div class="container">
	{{ include('::header.html.twig') }}
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-8 model-gallery">
			<div id="community-columns">
				{% for model_price in model_price_array %}
				<div class="pin">
					<a href="{{ path('model', {'id': model_price['model'].getId()}) }}">
						<img class="pin-image"
						src="{{ '/uploads/'~model_price['model'].getFacade().getPath()~'.jpg' }}">
					</a>
					<div class="row">
						<div class="col-xs-8">
							<h4>{{ model_price['model'].getName() }}</h4>
						</div>
						<div class="col-xs-4">
							<h4>
								<img src="/images/lennar.png" class="pin-builder">
							</h4>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">{{ (model_price['model'].getSquareFeet() *
							0.092903) | round}} 平方米</div>

						<div class="col-xs-12">{{ (model_price['price'] * 6.3 / 10000) |
							round }} 万元</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-4 model-block">
			<div class="piece">
				<div class="model-facade-thumb img-responsive"
					style="background-image: url('{{'/uploads/'~community.getFacade().getPath()~'.jpg'}}');"></div>
						<h4 class="text-center">{{ community.getName() }}社区</h4>
				<div class="model-side-detail">
					<p>地址：{{ community.getAddress() }} {{ community.getCity() }}, {{
						community.getState() }} {{ community.getZipcode() }}</p>
				</div>
			</div>
		</div>
	</div>
	<hr />
	{{ include('::footer.html.twig') }}
</div>
{% endblock %}
