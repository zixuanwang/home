 {% extends '::base.html.twig' %} {% block body %}
<div class="container">
	<div class="row">
		<nav class="navbar navbar-inverse navbar-static-top">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed"
					data-toggle="collapse" data-target="#home-header">
					<span class="sr-only">Toggle navigation</span> <span
						class="icon-bar"></span> <span class="icon-bar"></span> <span
						class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">搜美房</a>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="home-header">
				<ul class="nav navbar-nav headerCases">
					<li><button class="cta grey small rounded">西雅图</button></li>
					<li><button class="cta grey small rounded">旧金山</button></li>
					<li><button class="cta grey small rounded">洛杉矶</button></li>
				</ul>
			</div>
		</nav>
	</div>

	<div class="row">
		<div id="builder-carousel" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				{% for photo in builder.getAlbum().getPhotos() %} {% if loop.first
				%}
				<li data-target="builder-carousel" data-slide-to="{{ loop.index }}"
					class="active"></li> {% else %}
				<li data-target="builder-carousel" data-slide-to="{{ loop.index }}"></li>
				{% endif %} {% endfor %}
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox">
				{% for photo in builder.getAlbum().getPhotos() %} {% if loop.first
				%}
				<div class="item active">
					{% else %}
					<div class="item">
						{% endif %} <img src="{{ '/uploads/'~photo.getPath()~'.jpg' }}">
					</div>
					{% endfor %}
				</div>
				<!-- Controls -->
				<a class="left carousel-control" href="#builder-carousel"
					role="button" data-slide="prev"> <span
					class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a> <a class="right carousel-control" href="#builder-carousel"
					role="button" data-slide="next"> <span
					class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
		<div class="row">
			<h2>
				{{ builder.getName() }}<a href="{{ builder.getWebsite() }}"
					target="_blank"></a>
			</h2>
			<div class="row caseElementText">
				<div class="col-md-12">
					<p>{{ builder.getDescription() }}</p>
				</div>
			</div>
		</div>
	</div>
	{% endblock %} {% block javascripts %} {% endblock %}