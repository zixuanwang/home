 {% extends '::base.html.twig' %} {% block body %}
<div class="container">
	{{ include('::header.html.twig') }}
	<div class="row model-gallery">
		<div id="columns">
			{% for model in models %}
			<div class="pin">
				<a href="{{ path('model', {'id': model.getId()}) }}"> <img
					class="pin-image"
					src="{{ '/uploads/'~model.getFacade().getPath()~'.jpg' }}"></a>
				<div class="row">
					<div class="col-xs-8">
						<h4>{{ model.getName() }}</h4>
					</div>
					<div class="col-xs-4">
						<h4>
							<img src="/images/lennar.png" class="pin-builder">
						</h4>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-9">{{ (model.getSquareFeet() * 0.092903) |
						round}} 平方米</div>
					<div class="col-xs-1">
						<span class="glyphicon glyphicon-eye-open pin-glyphicon" aria-hidden="true"></span>
					</div>
					<div class="col-xs-1">
						<span class="glyphicon glyphicon-heart pin-glyphicon" aria-hidden="true"></span>
					</div>
					<div class="col-xs-1">
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	<hr/>
	{{ include('::footer.html.twig') }}
</div>
{% endblock %}
