 {% extends '::base.html.twig' %} {% block body %}
<div class="head-box">
	<div class="banner-background"
		style="opacity: 1; background-image: url(/images/{{ area }}_cover.jpg);"></div>
	<div class="new-banner"></div>
	<div id="header">{{ include('::header.html.twig') }}</div>
</div>
<div class="container">
	<div class="row" style="margin-top:15px">
		<div class="col-sm-3">
			<select class="form-control" id="select-price">
				<option>价格：人民币</option>
				<option>小于200万</option>
				<option>200万-500万</option>
				<option>大于500万</option>
			</select>
		</div>
		<div class="col-sm-3">
			<select class="form-control" id="select-sqft">
				<option>使用面积</option>
				<option>小于200平方米</option>
				<option>200-300平方米</option>
				<option>300-400平方米</option>
				<option>大于400平方米</option>
			</select>
		</div>
		<div class="col-sm-3">
			<select class="form-control" id="select-bed">
				<option>卧室数量</option>
				<option>1-2个卧室</option>
				<option>3-4个卧室</option>
				<option>5个以上卧室</option>
			</select>
		</div>
		<div class="col-sm-3">
			<select class="form-control" id="select-builder">
				<option>开发商</option>
				<option>莱纳 (Lennar)</option>
				<option>普尔特 (Pulte Homes)</option>
				<option>霍顿 (D.R. Horton)</option>
			</select>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div id="container">
				{% for model in models %}
				<div class="pin">
					<a href="{{ path('model', {'id': model.getId()}) }}"> <img
						class="pin-image"
						src="{{ '/uploads/'~model.getFacades()[0].getPath()~'.jpg' }}"></a>
					<div class="row">
						<div class="col-xs-12">
							<h5>{{ model.getName() }}</h5>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">{{ (model.getSquareFeet() * 0.092903) |
							round}} 平方米， {{ model.getNumBeds() }}卧，{{ model.getNumBaths() }}卫
						</div>
						<div class="col-xs-12">{% if starting_prices[model.getId()] == 0
							%} 无现房 {% else %} ￥{{ (starting_prices[model.getId()] * 6.3 /
							10000) | round }} 万元起 {% endif %}</div>
					</div>
					{% if not model.getImages() is empty %}
					<div class="ribbon-wrapper-green">
						<div class="ribbon-green">样板间</div>
					</div>
					{% endif %}
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-right">
			<nav>
				<ul class="pagination">
					{% for i in page_array %} {% if i == page %}
					<li class="active"><a
						href="{{ path('home', {'area': area, 'page': i}) }}">{{ i }}</a></li>
					{% else %}
					<li><a href="{{ path('home', {'area': area, 'page': i}) }}">{{ i }}</a></li>
					{% endif %} {% endfor %}
				</ul>
			</nav>
		</div>
	</div>
	<hr />
	{{ include('::footer.html.twig') }}
</div>
{% endblock %} {% block javascripts %}
<script type="text/javascript">
	var search_func = function() {
		var price_index = $("#select-price").prop("selectedIndex");
		var sqft_index = $("#select-sqft").prop("selectedIndex");
		var bed_index = $("#select-bed").prop("selectedIndex");
		var builder_index = $("#select-builder").prop("selectedIndex");
		var url = "{{ path('search') }}?area={{ area }}" + "&p=" + price_index + "&s=" + sqft_index + "&b=" + bed_index + "&bu=" + builder_index;
		window.location.replace(url);
	};
	$('#select-price').on('change', search_func);
	$('#select-sqft').on('change', search_func);
	$('#select-bed').on('change', search_func);
	$('#select-builder').on('change', search_func);
</script>
{% endblock %}
