 {% extends '::base.html.twig' %} {% block body %}
<div class="container">
	{{ include('::header.html.twig') }}
	<div class="row category-bar">
		<div class="col-lg-12 text-center">
			<div class="category-item">
				<img src="/images/school.jpg" alt="..." class="img-rounded">
				<div class="category-desc">
					<h5>优秀学区</h5>
				</div>
			</div>
			<div class="category-item">
				<img src="/images/invest.jpg" alt="..." class="img-rounded">
				<div class="category-desc">
					<h5>投资升值</h5>
				</div>
			</div>
			<div class="category-item">
				<img src="/images/downtown.jpg" alt="..." class="img-rounded">
				<div class="category-desc">
					<h5>热门地段</h5>
				</div>
			</div>
			<div class="category-item">
				<img src="/images/sea.jpg" alt="..." class="img-rounded">
				<div class="category-desc">
					<h5>养老休闲</h5>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div id="container">
				{% for model in models %}
				<div class="pin">
					<a href="{{ path('model', {'id': model.getId()}) }}"> <img
						class="pin-image"
						src="{{ '/uploads/'~model.getFacades()[0].getPath()~'.jpg' }}"></a>
					<div class="row">
						<div class="col-xs-12">
							<h5>{{ model.getName() }}</h5>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">{{ (model.getSquareFeet() * 0.092903) |
							round}} 平方米， {{ model.getNumBeds() }}卧，{{ model.getNumBaths() }}卫
						</div>
						<div class="col-xs-12">{% if starting_prices[model.getId()] == 0
							%} 无现房 {% else %} ￥{{ (starting_prices[model.getId()] * 6.3 /
							10000) | round }} 万元起 {% endif %}</div>
					</div>
					{% if not model.getImages() is empty %}
					<div class="ribbon-wrapper-green">
						<div class="ribbon-green">样板间</div>
					</div>
					{% endif %}
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-right">
			<nav>
				<ul class="pagination">
					{% for i in page_array %} {% if i == page %}
					<li class="active"><a
						href="{{ path('home', {'area': area, 'page': i}) }}">{{ i }}</a></li>
					{% else %}
					<li><a href="{{ path('home', {'area': area, 'page': i}) }}">{{ i
							}}</a></li> {% endif %} {% endfor %}
				</ul>
			</nav>
		</div>
	</div>
	<hr />
	{{ include('::footer.html.twig') }}
</div>
{% endblock %}
